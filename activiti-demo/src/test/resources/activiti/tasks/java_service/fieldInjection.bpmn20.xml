<definitions xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
	xmlns:activiti="http://activiti.org/bpmn" targetNamespace="Examples">

	<process id="myProcess" name="My Process">
		<startEvent id="theStart" />
		<sequenceFlow sourceRef="theStart" targetRef="theTask" />
		
		<serviceTask id="theTask" name="My Task" 
			activiti:class="org.activiti.tasks.test.delegate.ToUpperCaseFieldInjected">
			<extensionElements>
				<activiti:field name="text" activiti:expression="${input}" />
			</extensionElements>
		</serviceTask>
		<sequenceFlow sourceRef="theTask" targetRef="theEnd" />
		
		<endEvent id="theEnd" />
	</process>

</definitions>